            android:name="ca.ualberta.cs.olexson_travel.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.olexson_travel.NewClaimActivity"
            android:label="@string/title_activity_new_claim" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.olexson_travel.ItemListActivity"
            android:label="@string/title_activity_item_list" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.olexson_travel.NewItemActivity"
            android:label="@string/title_activity_new_item" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.olexson_travel.ExpenseItemsActivity"
            android:label="@string/title_activity_expense_items" >
        </activity>
    </application>

</manifest>
